---
import "@styles/styles.scss"
import "prismjs/themes/prism-okaidia.min.css"
import TheHeader from "@components/TheHeader.vue"
import TheFooter from "@components/TheFooter.vue"
import { SEO } from "astro-seo"

export interface Props {
  title: string;
}

const { title, featured } = Astro.props;
const { pathname } = Astro.url

const { GA_MEASUREMENT_ID } = import.meta.env
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- Google tag (gtag.js) -->
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_MEASUREMENT_ID}`}></script>
    <script define:vars={{ GA_MEASUREMENT_ID }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', GA_MEASUREMENT_ID);
      </script>
    <SEO
      title={title}
      openGraph={{
        basic: {
          type: 'website',
          title,
          image: featured || '/images/default_media.png'
        },
      }}
      extend={{
        // extending the default link tags
        link: [
          { rel: "icon", type: "image/png", size: "16x16", href: "/favicon.png" },
          { rel: "sitemap", href: "sitemap-index.xml" }
        ],
        // extending the default meta tags
        meta: [
          { name: "twitter:card", content: "summary" },
        ],
      }}
    />
  </head>
  <body>
    <div class="bg-gray-100 font-sans leading-normal tracking-normal">
      <TheHeader client:load pathname={pathname} />
  
      <!--Container-->
      <div class="container w-full md:max-w-3xl mx-auto pt-20 pb-6">
        <slot />
      </div>
      <!--/container-->
  
      <TheFooter client:load />
    </div>
  </body>
</html>
